<script>   
    // init gallery for later use
    var ImageLinks;

    // Grab links for images from backend api
    function fetchImageLinks() {
        // Fetch images
        $.get("api/images/list", function(fetchedImageLinks) {
            console.log(fetchedImageLinks);
            
            // Check if anything is fetched
            if (_.isEmpty(fetchedImageLinks)) {
                console.log('Empty fetched');
                return; // Exit function early if no images fetched
            }
            // ImageLinks = fetchedImageLinks;
            // Check if ImageLinks is defined and is an array
            if (!Array.isArray(ImageLinks)) {
                console.log('ImageLinks is not defined or not an array');
                ImageLinks = []; // Initialize ImageLinks if it's not defined or not an array
            }
    
            // Check if images are equal
            var imageLinksEqual = _.isEqual(_.sortBy(ImageLinks.map(s => s.split("?")[0])), _.sortBy(fetchedImageLinks.map(s => s.split("?")[0])));
    
            if (imageLinksEqual) {
                console.log('Images array are equal');
                return; // Exit function if arrays are equal
            }
    
            console.log('Images array are not equal');
    
            // Update ImageLinks with new image urls. Only compare actual URL without SAS token query string
            var newImageLinks = _.difference(fetchedImageLinks, ImageLinks);
    
            console.log('Difference is: ');
            console.log(newImageLinks);
    
            // Add new images to ImageLinks
            ImageLinks.push(...newImageLinks);
    
            // Load images
            loadImages(newImageLinks);
        });
    }
    
    function loadImages(imageLinks) {
        var galleryContainer = document.getElementById("galleryContainer");
    
        imageLinks.forEach(function(imageLink) {
            var galleryItem = document.createElement("div");
            galleryItem.className = "gallery-item";
            galleryItem.innerHTML = '<img src="' + imageLink + '" alt="Gallery Image">';
            galleryContainer.appendChild(galleryItem);
        });
    }

    // Start first interval
    fetchImageLinks()
    
    setInterval(function() {
        fetchImageLinks()
    }, 6000000) 

